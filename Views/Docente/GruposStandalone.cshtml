@{
    Layout = "~/Views/Shared/_LayoutDocente.cshtml";
    ViewBag.Title = "Grupos";
    int docenteId = ViewBag.DocenteId != null ? (int)ViewBag.DocenteId : 0;
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>Gestionar Grupos (standalone)</h2>
        <div>
            <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#gruposModal">Crear Grupo</button>
            <button class="btn btn-secondary" onclick="cargarGrupos()">Refrescar</button>
        </div>
    </div>

    <div id="listaGrupos" class="mb-4"></div>

    <div class="divider"></div>

    <h4 class="mt-4">Materias sin grupo</h4>
    <div id="listaMateriasSinGrupo" class="mt-3"></div>

    @Html.Partial("GruposModal")
    @Html.Partial("MateriasModal")
</div>

@section Scripts{
    <script>
        var docenteIdGlobal = '@docenteId';
        document.addEventListener('DOMContentLoaded', function(){
            if (typeof inicializar === 'function') inicializar();
        });
    </script>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/docente")
    @Scripts.Render("~/bundles/docentegrupos")
}
