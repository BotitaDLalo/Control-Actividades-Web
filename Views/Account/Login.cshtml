@using ControlActividades.Models
@model LoginViewModel
@{
    Layout = null; // Render standalone so the login box centers on the viewport
    ViewBag.Title = "Iniciar sesión";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="icon" href="@Url.Content("~/Content/Iconos/logo2.svg")" type="image/x-icon" />

    <!-- Load login stylesheet directly so centering works when rendered standalone -->
    <link rel="stylesheet" href="~/Content/bootstrap.min.css" />
    <link href="@Url.Content("~/Content/Login/Login.css")" rel="stylesheet" />
    <link href="@Url.Content("~/Content/Variables/colors.css")" rel="stylesheet" />
    <title>Iniciar sesión</title>
</head>
<body>

    <section class="signin-section">
        <div class="container-fluid">
            <!--Contenedor de logo y form-->
            <div class="row g-0 auth-row">
                <div class="col-lg-6" style="background-color:var(--azul-twitter); border-top-right-radius: 150px; ">
                    <div class="auth-cover-wrapper bg-primary-100">
                        <div class="auth-cover">
                            <div class="title text-center">
                                <div class="cover-image">
                                    <img src="~/Content/Iconos/logo2.svg" alt="" />
                                </div>
                            </div>
                            <div>
                                <h2 class="text-center" style="color:white;">Bienvenido</h2>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-lg-6">
                    <div class="signin-wrapper">
                        <div class="form-wrapper">
                            <div class="login-header">
                                <header>Iniciar sesión</header>
                            </div>

                            @using (Html.BeginForm("Login", "Account", FormMethod.Post))
                            {
                                @Html.AntiForgeryToken()
                                @Html.Hidden("returnUrl", (object)ViewBag.ReturnUrl)
                                <div class="input-box">
                                    <input type="text" class="input-field" id="email" name="email" autocomplete="off" required />
                                    <label for="email">Correo electrónico</label>
                                </div>
                                <div class="input-box">
                                    <div class="password-wrapper">
                                        <input type="password" class="input-field" id="password" name="password" autocomplete="off" required />
                                        <button type="button" class="password-toggle" aria-label="Mostrar contraseña" aria-pressed="false">
                                            <svg class="icon-eye" xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="#555" stroke-width="1.6" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
                                                <path d="M1 12s4-7 11-7 11 7 11 7-4 7-11 7S1 12 1 12z"></path>
                                                <circle cx="12" cy="12" r="3"></circle>
                                            </svg>
                                        </button>
                                        <label for="password">Contraseña</label>
                                    </div>
                                </div>
                                <div class="forgot">
                                    <section>
                                        @Html.ActionLink("¿Olvidaste la contraseña?", "ForgotPassword", "Account", null, new { @class = "forgot-link" })
                                    </section>
                                </div>
                                <div class="input-box">
                                    <input type="submit" class="input-submit" value="Iniciar sesión" />
                                </div>
                            }

                            <div class="input-submit-signin  d-flex justify-content-center align-items-center ">
                                @Html.ActionLink(
                                                  "Registrarse",
                                                  "ValidateEmail",
                                                  "Account",
                                                  null,
                                                  new { @class = "text-decoration-none" })
                            </div>

                            <div class="middle-text">
                                <hr />
                                <p class="or-text">O</p>
                            </div>

                            <div class="button-group pt-40 pb-40 d-flex justify-content-center flex-wrap">
                                @using (Html.BeginForm("ExternalLogin", "Account", new { provider = "Google", returnUrl = Url.Content("~/") }, FormMethod.Post, new { id = "googleLoginForm" }))
                                {
                                    <button class="main-btn danger-btn-outline m-2" type="submit">
                                        <i class="lni lni-google mr-10"></i>
                                        Google
                                    </button>
                                    
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div> 
        </div>
    </section>




    @Scripts.Render("~/bundles/jqueryval")
    <script>
        (function () {
            const pwd = document.getElementById('password');
            const btn = document.querySelector('.password-toggle');

            if (!pwd || !btn) return;

            function setButtonState(isShown) {
                btn.setAttribute('aria-pressed', String(isShown));
                btn.setAttribute('aria-label', isShown ? 'Ocultar contraseña' : 'Mostrar contraseña');
                const svg = btn.querySelector('svg');
                if (svg) svg.style.stroke = isShown ? '#3a7bd5' : '#555';
            }

            btn.addEventListener('click', function () {
                const isPassword = pwd.type === 'password';
                pwd.type = isPassword ? 'text' : 'password';
                setButtonState(isPassword);
            });
        })();
    </script>
</body>
</html>