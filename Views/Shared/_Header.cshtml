@using System.Web
<div class="nav-bar">
    <nav class="navbar navbar-expand-sm navbar-light bg-white border-bottom">
        <style>
            /* Header icons: place in the top-right corner of the header (relative to full-width nav-bar) */
            .nav-bar {
                position: relative;
            }

                .nav-bar .header-icons {
                    position: fixed;
                    right: 16px;
                    top: 12px;
                    display: flex;
                    align-items: center;
                    gap: 10px;
                    z-index: 3000;
                }

                    .nav-bar .header-icons .btn-link,
                    .nav-bar .header-icons .btn {
                        color: #5a5a5a;
                        background: transparent;
                        border: none;
                    }

                        .nav-bar .header-icons .btn-link:hover,
                        .nav-bar .header-icons .btn:hover {
                            color: #2f2f2f;
                            background-color: rgba(0,0,0,0.04);
                        }

                    /* position notification panel and user dropdown relative to the header-icons container */
                    .nav-bar .header-icons .notificaciones-container {
                        position: absolute;
                        top: calc(100% + 8px);
                        right: 0;
                        z-index: 3050;
                    }

                    .nav-bar .header-icons .dropdown-menu {
                        position: absolute;
                        top: calc(100% + 8px);
                        right: 0;
                        z-index: 3050;
                    }

            /* Responsive: on small screens put icons back in header flow */
            @@media (max-width: 991px) {
                .nav-bar .header-icons {
                    position: static;
                    top: auto;
                    right: auto;
                    margin-left: auto;
                }

                    .nav-bar .header-icons .notificaciones-container,
                    .nav-bar .header-icons .dropdown-menu {
                        position: absolute;
                        top: calc(100% + 8px);
                        right: 0;
                    }
            }

            .noti-item:hover {
                background: #f8f9fa;
                cursor: pointer;
            }

            .lista-notis {
                max-height: 250px;
                overflow-y: auto;
            }

            /* make svg icons follow currentColor */
            .nav-bar .header-icons svg {
                fill: currentColor;
            }
        </style>
        <div class="container-fluid d-flex align-items-center">
            <div class="me-auto">
                @* Page title: prefer ViewBag.PageHeader set by views; fallback to default label *@
                <span id="page-title-header" class="fw-bold text-dark">@((ViewBag.PageHeader ?? "Header"))</span>
            </div>

            <div class="header-icons d-flex align-items-center" style="gap:8px;">
                <!-- Notifications button -->
                <button id="notificaciones-icono" class="btn btn-link position-relative p-2" type="button" title="Notificaciones">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-bell-fill" viewBox="0 0 16 16">
                        <path d="M8 16a2 2 0 0 0 2-2H6a2 2 0 0 0 2 2m.995-14.901a1 1 0 1 0-1.99 0A5 5 0 0 0 3 6c0 1.098-.5 6-2 7h14c-1.5-1-2-5.902-2-7 0-2.42-1.72-4.44-4.005-4.901" />
                    </svg>
                </button>

                <div id="notificaciones-panel" class="notificaciones-container" aria-hidden="true">
                    <div class="p-2">
                        <strong>Notificaciones</strong>
                    </div>
                    <div class="px-2">
                        <small class="text-muted">No hay notificaciones recientes.</small>
                        <div class="lista-notificaciones"></div>
                    </div>
                </div>

                <!-- User dropdown (uses Bootstrap dropdown) -->
                <div class="nav-item dropdown">
                    <button class="btn btn-link p-2 dropdown-toggle" style="width:80px;" id="userDropdown" data-bs-toggle="dropdown" aria-expanded="false" type="button" title="Usuario">
                        @*<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-person-circle" viewBox="0 0 16 16">
            <path d="M11 6a3 3 0 1 1-6 0 3 3 0 0 1 6 0" />
            <path fill-rule="evenodd" d="M0 8a8 8 0 1 1 16 0A8 8 0 0 1 0 8m8-7a7 7 0 0 0-5.468 11.37C3.242 11.226 4.805 10 8 10s4.757 1.225 5.468 2.37A7 7 0 0 0 8 1" />
        </svg>*@
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-person-circle" viewBox="0 0 16 16">
                            <path d="M11 6a3 3 0 1 1-6 0 3 3 0 0 1 6 0" />
                            <path fill-rule="evenodd" d="M0 8a8 8 0 1 1 16 0A8 8 0 0 1 0 8m8-7a7 7 0 0 0-5.468 11.37C3.242 11.226 4.805 10 8 10s4.757 1.225 5.468 2.37A7 7 0 0 0 8 1" />
                        </svg>
                    </button>

                    <div class="dropdown-menu dropdown-menu-end" aria-labelledby="userDropdown" style="min-width:220px;">
                        <div class="user-info px-3 py-2 d-flex align-items-center">
                            <img class="iconos1-nav me-2" src="@Url.Content("~/Content/Iconos/PERFIL-26.svg")" alt="Usuario" />
                            <div>
                                <div class="dropdown-item mb-0">@User.Identity.Name</div>
                                <div class="text-muted small">@(User.Identity.IsAuthenticated ? (User.Identity.Name ?? "") : "Invitado")</div>
                            </div>
                        </div>
                        <div class="dropdown-divider"></div>

                        @using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "px-3 py-2" }))
                        {
                            @Html.AntiForgeryToken()
                            <button type="submit" class="btn btn-outline-danger w-100">Cerrar sesión</button>
                        }
                    </div>
                </div>
            </div>
        </div>
    </nav>
</div>

<script src="~/Scripts/Shared/headerNotifications.js"></script>
