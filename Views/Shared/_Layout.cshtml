<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - ControlActividades</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet">

    <!-- Use Inter font site-wide -->
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@100;200;300;400;500;600;700;800;900&display=swap" rel="stylesheet">

    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/Variables")
    @Styles.Render("~/Content/Componentes")
    @Scripts.Render("~/bundles/modernizr")

    <style>
        html, body {
            font-family: 'Inter', system-ui, -apple-system, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
        }

        /* Hacer la animación de los submenús (bootstrap collapse) más lenta: 0.3s */
        .collapsing {
            -webkit-transition: height 0.3s ease;
            transition: height 0.3s ease;
        }

        /* Asegura que las transiciones relacionadas con collapse también usen 0.3s */
        .collapse {
            -webkit-transition: height 0.3s ease;
            transition: height 0.3s ease;
        }
    </style>
</head>
<body>

    <div class="app-main" style="display:flex; min-height:100vh;">
        <main class="app-content" style="flex:1; padding:20px;">
            @RenderBody()
            <hr />
            <footer>
                <p>&copy; @DateTime.Now.Year - Control Actividades</p>
            </footer>
        </main>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/carga")

    <!--SPINNER DE CARGA-->
    <div id="loader" class="carga">
        <div class="spinner"></div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    @RenderSection("Scripts", required: false)
    @RenderSection("Styles", required: false)
</body>
</html>
