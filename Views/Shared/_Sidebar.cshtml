@* Redesigned sidebar: visual style like the provided reference (layout and interactions), content kept as existing ActionLinks *@
@using System.Security.Principal
@{
    var isDocente = User.IsInRole("Docente");
    var isAlumno = User.IsInRole("Alumno");
    // also detect alumno by route or ViewBag in case role claims are not present in the principal
    var currentController = (ViewContext.RouteData.Values["controller"] ?? "").ToString();
    if (!isAlumno && (string.Equals(currentController, "Alumno", StringComparison.OrdinalIgnoreCase) || ViewBag.AlumnoId != null))
    {
        isAlumno = true;
    }
    var inicioUrl = isDocente ? Url.Action("Index", "Docente") : (isAlumno ? Url.Action("Index", "Alumno") : Url.Action("Index", "Home"));
}
<aside class="app-sidebar new-sidebar" id="appSidebar" role="navigation" aria-label="Sidebar">
    <div class="sidebar-inner">
        <div class="sidebar-top">
            <a class="brand-link" href="@inicioUrl">
                <img src="@Url.Content("~/Content/Iconos/LOGO HORIZONTAL-26.svg")" alt="Logo" class="sidebar-logo" />
            </a>
            <button id="sidebarToggle" class="sidebar-toggle" aria-label="Alternar menú">
                <span class="hamburger"></span>
            </button>
        </div>

        <div class="sidebar-cta">
            <button class="btn btn-cta" id="btnSidebarCrear" data-bs-toggle="modal" data-bs-target="#materiasModal">Crear</button>
        </div>

        <nav class="sidebar-nav" aria-label="Main navigation">
            <ul class="nav-sections">
                <li class="nav-section" id="section-inicio">
                    <!-- Inicio: el botón tiene data-href para navegar; el caret controls the submenu -->
                    <button class="section-btn" data-target="#menu-home" aria-expanded="false" data-href="@inicioUrl">
                        <i class="fas fa-home"></i>
                        <span class="section-label">Inicio</span>
                        <i class="caret fas fa-chevron-right"></i>
                    </button>
                    <ul class="section-submenu menu-list submenu" id="menu-home" aria-hidden="true">
                        <li><a href="@inicioUrl"><i class="menu-icon fas fa-tachometer-alt"></i> Dashboard</a></li>
                    </ul>
                </li>

                <li class="nav-section" id="section-actividades">
                    <button class="section-btn" data-target="#menu-actividades" aria-expanded="false">
                        <i class="fas fa-th-large"></i>
                        <span class="section-label">Actividades</span>
                        <i class="caret fas fa-chevron-right"></i>
                    </button>
                    <ul class="section-submenu" id="menu-actividades" aria-hidden="true">
                        @if (isDocente)
                        {
                            <li>@Html.ActionLink("Evaluar Actividades", "EvaluarActividades", "Docente", null, new { @class = "submenu-link" })</li>
                        }
                        else if (isAlumno)
                        {
                            <li>@Html.ActionLink("Ver Actividades", "Actividades", "Alumno", null, new { @class = "submenu-link" })</li>
                            <li>@Html.ActionLink("Mis Entregas", "MisEntregas", "Alumno", null, new { @class = "submenu-link" })</li>
                        }
                    </ul>
                </li>

                <li class="nav-section" id="section-calendario">
                    <button class="section-btn" data-target="#menu-calendario" aria-expanded="false">
                        <i class="fas fa-calendar-alt"></i>
                        <span class="section-label">Calendario</span>
                        <i class="caret fas fa-chevron-right"></i>
                    </button>
                    <ul class="section-submenu menu-list submenu" id="menu-calendario" aria-hidden="true">
                        <li><a href="@Url.Action("Calendario", "Home")"><i class="menu-icon fas fa-calendar-alt"></i> Calendario</a></li>
                    </ul>
                </li>

                <li class="nav-section" id="section-config">
                    <button class="section-btn" data-target="#menu-perfil" aria-expanded="false">
                        <i class="fas fa-user"></i>
                        <span class="section-label">Cuenta</span>
                        <i class="caret fas fa-chevron-right"></i>
                    </button>
                    <ul class="section-submenu" id="menu-perfil" aria-hidden="true">
                        <li>@Html.ActionLink("Perfil", "Index", "Manage", null, new { @class = "submenu-link" })</li>
                        <li>
                            @using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { @class = "logout-form" }))
                            {
                                @Html.AntiForgeryToken()
                                <button type="submit" class="submenu-link btn-link" style="border:none;background:none;padding:0;color:inherit;text-align:left;">Cerrar sesión</button>
                            }
                        </li>
                    </ul>
                </li>
            </ul>
        </nav>

        <div class="sidebar-footer">
            <small class="muted">© @DateTime.Now.Year</small>
        </div>
    </div>
</aside>

@section Scripts {
    <script src="~/Scripts/sidebar.js"></script>
}