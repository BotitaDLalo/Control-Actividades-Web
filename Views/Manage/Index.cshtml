@model ControlActividades.Models.IndexViewModel
@{
    ViewBag.Title = "Administrar";
}

<style>
/* Styles for account/profile page */
.account-page { max-width: 920px; margin: 24px auto; }
.account-card { background: #fff; border-radius: 12px; box-shadow: 0 8px 28px rgba(18,38,63,0.06); overflow: hidden; border: 1px solid rgba(0,0,0,0.04); }
.account-header { display:flex; align-items:center; gap:16px; padding:20px 24px; background: linear-gradient(90deg,#2f9fff,#6b6ff8); color:#fff; }
.account-header img.logo { height:40px; }
.account-title { margin:0; font-size:22px; font-weight:700; }
.account-subtitle { margin:0; font-size:14px; opacity:0.95 }
.account-body { padding:24px; }
.account-section-title { font-size:18px; margin-bottom:12px; color:#333; }
.account-dl dt { font-weight:600; margin-top:12px; color:#555 }
.account-dl dd { margin-left:0; margin-bottom:8px; }
.account-link { color:#2f9fff; text-decoration:none; font-weight:600; }
.account-link:hover { text-decoration:underline; }
.footer-note { margin-top:18px; color:#777; font-size:13px }
@@media (max-width:720px){ .account-header{ flex-direction:column; align-items:flex-start; gap:8px } }
</style>

<main class="account-page" aria-labelledby="title">
    <div class="account-card">
        <header class="account-header">
            <img src="@Url.Content("~/Content/Iconos/LOGO HORIZONTAL-26.svg")" alt="Aprende+" class="logo" />
            <div>
                <h2 id="title" class="account-title">Mi cuenta</h2>
                <p class="account-subtitle">Gestiona la configuración de tu perfil y seguridad</p>
            </div>
        </header>

        <section class="account-body">
            <h3 class="account-section-title">Configuración de la cuenta</h3>

            <p class="text-success">@ViewBag.StatusMessage</p>

            <dl class="account-dl">
                <dt>Contraseña:</dt>
                <dd>
                    [
                    @if (Model.HasPassword)
                    {
                        @Html.ActionLink("Cambiar la contraseña", "ChangePassword", null, new { @class = "account-link" })
                    }
                    else
                    {
                        @Html.ActionLink("Crear", "SetPassword", null, new { @class = "account-link" })
                    }
                    ]
                </dd>

                <dt>Inicios de sesión externos:</dt>
                <dd>
                    @Model.Logins.Count [
                    @Html.ActionLink("Manage", "ManageLogins", null, new { @class = "account-link" }) ]
                </dd>

                <dt>Autenticación de dos factores:</dt>
                <dd>
                    <p>
                        No hay ningún proveedor de autenticación en dos fases configurado. Consulte <a href="https://go.microsoft.com/fwlink/?LinkId=403804" target="_blank">este artículo</a> para obtener detalles sobre cómo configurar la autenticación en dos fases.
                    </p>
                </dd>
            </dl>

            <div class="footer-note">Si necesitas cambiar otros datos del perfil (nombre, correo, foto), revisa las opciones disponibles en la sección de perfil o contacta con el administrador.</div>
        </section>
    </div>
</main>