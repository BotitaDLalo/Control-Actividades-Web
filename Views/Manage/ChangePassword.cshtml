@model ControlActividades.Models.ChangePasswordViewModel
@{
    ViewBag.Title = "Cambiar contraseña";
}

<style>
/* Reuse account styles similar to Manage/Index */
.account-page { max-width: 920px; margin: 24px auto; }
.account-card { background: #fff; border-radius: 12px; box-shadow: 0 8px 28px rgba(18,38,63,0.06); overflow: hidden; border: 1px solid rgba(0,0,0,0.04); }
.account-header { display:flex; align-items:center; gap:16px; padding:20px 24px; background: linear-gradient(90deg,#2f9fff,#6b6ff8); color:#fff; }
.account-header img.logo { height:40px; }
.account-title { margin:0; font-size:22px; font-weight:700; }
.account-subtitle { margin:0; font-size:14px; opacity:0.95 }
.account-body { padding:24px; }
.form-row { display:flex; gap:16px; align-items:center; margin-bottom:14px; }
.form-row label { width: 220px; font-weight:600; color:#444; }
.form-row .form-control { flex:1; padding:10px 12px; border-radius:8px; border:1px solid #e3e6ea; box-shadow:none; }
.btn-primary-custom { background: linear-gradient(90deg,#ff8a00,#ff5c00); color:#fff; border:none; padding:10px 18px; border-radius:8px; font-weight:600; }
.text-danger { color:#d9534f; }
.footer-note { margin-top:18px; color:#777; font-size:13px }
@@media (max-width:720px){ .account-header{ flex-direction:column; align-items:flex-start; gap:8px } .form-row { flex-direction:column; align-items:stretch; } .form-row label { width:auto; } }
</style>

<main class="account-page" aria-labelledby="title">
    <div class="account-card">
        <header class="account-header">
            <img src="@Url.Content("~/Content/Iconos/LOGO HORIZONTAL-26.svg")" alt="Aprende+" class="logo" />
            <div>
                <h2 id="title" class="account-title">Cambiar contraseña</h2>
                <p class="account-subtitle">Formulario para cambiar contraseña</p>
            </div>
        </header>

        <section class="account-body">
            @using (Html.BeginForm("ChangePassword", "Manage", FormMethod.Post, new { role = "form" }))
            {
                @Html.AntiForgeryToken()

                @Html.ValidationSummary("", new { @class = "text-danger" })

                <div class="form-row">
                    @Html.LabelFor(m => m.OldPassword)
                    @Html.PasswordFor(m => m.OldPassword, new { @class = "form-control" })
                </div>

                <div class="form-row">
                    @Html.LabelFor(m => m.NewPassword)
                    @Html.PasswordFor(m => m.NewPassword, new { @class = "form-control" })
                </div>

                <div class="form-row">
                    @Html.LabelFor(m => m.ConfirmPassword)
                    @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
                </div>

                <div style="margin-top:12px">
                    <input type="submit" value="Cambiar contraseña" class="btn-primary-custom" />
                </div>

                <div class="footer-note">Si olvidaste tu contraseña, utiliza la opción de recuperar contraseña desde el inicio de sesión.</div>
            }
        </section>
    </div>
</main>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}